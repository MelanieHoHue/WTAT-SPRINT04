<div class="row">
    <h1>All users</h1>
    <hr>
     <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>ZipCode</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td>
                        <a href="<%= `/users/${user._id}` %>">
                            <%= user.fullName %>
                        </a>
                    </td>
                    <td><%= user.email %></td>
                    <td><%= user.zipCode %></td>
                    <td>
                        <a href="<%= `/users/${user._id}/edit` %>">
                            <button>Edit</button>
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

