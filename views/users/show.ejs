<div class="row">
    <h1>User data for: <%= user.fullName %></h1>
    <hr>
    <div class="col-sm-4">
        <a href="/users"><button type="button" class="btn-primary">View all users</button></a>
    </div>
    <div class="col-sm-4">
        <a href="<%=`/users/${user._id}/edit`%>"><button class="btn-success">Edit User Details</button></a>
    </div>
    <div class="col-sm-4">
        <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')">
            <button class="btn-danger">Delete</button>
        </a>
    </div>
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>ZipCode</th>
                </tr>
            </thead>
            <tbody>
                
                <td><%= user.fullName %></td>
                <td><%= user.email %></td>
                <td><%= user.zipCode %></td>

            </tbody>
        </table>
        <% if (user.subscribedAccount) { %>
            <h4 class="="center"> This user has a 
                <a href="<%=`/subscribers/${user.subscribedAccount}` %>">subscribed account</a>
            </h4>
        <% } %>
    </div>
</div>